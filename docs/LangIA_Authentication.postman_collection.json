		{
			"name": "2. Authentication",
			"item": [
				{
					"name": "Login - Student",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Testa status code",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// Valida estrutura da resposta",
									"pm.test(\"Response contains token and user data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('token');",
									"    pm.expect(jsonData).to.have.property('userId');",
									"    pm.expect(jsonData).to.have.property('name');",
									"    pm.expect(jsonData).to.have.property('email');",
									"    pm.expect(jsonData).to.have.property('profile');",
									"    pm.expect(jsonData).to.have.property('permissions');",
									"    pm.expect(jsonData).to.have.property('expiresIn');",
									"});",
									"",
									"// Valida que é perfil STUDENT",
									"pm.test(\"User profile is STUDENT\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.profile).to.eql('STUDENT');",
									"});",
									"",
									"// Valida que tem permissões",
									"pm.test(\"Has permissions array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.permissions).to.be.an('array');",
									"    pm.expect(jsonData.permissions.length).to.be.above(0);",
									"});",
									"",
									"// Salva o token e userId nas variáveis de ambiente",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.environment.set(\"userId\", jsonData.userId);",
									"    console.log(\"Token saved: \" + jsonData.token);",
									"    console.log(\"UserId saved: \" + jsonData.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"joao.silva@example.com\",\n  \"password\": \"senha123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Realiza login no sistema e retorna token JWT.\n\n**Resposta de Sucesso:**\n- token: Token JWT para autenticação\n- userId: ID do usuário\n- name: Nome do usuário\n- email: Email do usuário\n- profile: Perfil (STUDENT, TEACHER, ADMIN)\n- permissions: Array de permissões\n- expiresIn: Tempo de expiração em milissegundos\n\n**Sessão:**\n- Duração: 1 hora (3600000ms)\n- Armazenamento: Redis\n- Renovável: Sim"
					},
					"response": []
				},
